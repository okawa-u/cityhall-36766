<p id="notice"><%= notice %></p>

<div class='main'>

  <div class='title-contents'>
    <h2 class='service-title'>
      市役所簡単予約
    </h2>
    <p class='service-explain'>
      だれでもかんたんに予約できるWebサイト
    </p>
    <p class='service-explain'>
      
    </p>
  </div>
<div>

<h1>予約フォーム</h1>

<%= link_to '新規予約', new_reservation_path %>

<%= month_calendar events: @reservations do |date, reservations| %>
  <%= date %>

  <% reservations.each do |reservation| %>
    <div>
      <%= reservation.start_time.hour %>:<%= reservation.start_time.min %>
      <%= reservation.name %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>予約時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <td><%= reservation.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '確認', reservation %></td>
        <td><%= link_to '編集', edit_reservation_path(reservation) %></td>
        <td><%= link_to '削除', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>